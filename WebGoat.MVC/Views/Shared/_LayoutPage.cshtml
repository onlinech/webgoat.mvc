@using System.Web.Mvc.Html
<<!DOCTYPE html>
<html>
<head runat="server">
    <title>@ViewBag.Title</title>
    <link href="../../Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/scripts.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <header>
            <div id="status-area"></div>
            <div id="title">
                <h1>WebGoat.MVC - An OWASP Top 10 Analysis using ASP.NET MVC Framework</h1>
            </div>
            <nav>
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>User: @User.Identity.Name</li>
                        <li>@Html.ActionLink("Logout", "Logout", "Authentication")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Login", "Login", "Authentication")</li>
                    }
                </ul>
            </nav>
        </header>
        <section id="main">
            @RenderBody()
            <footer></footer>
        </section>
    </div>
</body>
</html>
